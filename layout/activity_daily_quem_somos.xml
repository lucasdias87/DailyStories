<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/azul_d"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dailystories001.DailyQuemSomos" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:orientation="vertical" >

            <Button
                android:id="@+id/btnVot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/Voltar"
                android:textColor="#ffff4d"
                android:textSize="@dimen/vint"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/SociPiungum"
                android:textColor="#ffff4d"
                android:textSize="@dimen/vint"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Arthur"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffff4d" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Gabriel"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffff4d" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Henrique"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffff4d" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Lucas"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffff4d" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Gasai"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ffff4d" />

        </LinearLayout>
    </ScrollView>

</TableLayout>